<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @post.image.url, class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @post.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @post.user.name %></li>
                <li class="list-inline-item"><%= l @post.created_at, format: :long  %></li>
                <li>
                <% if current_user.own?(@post) %>
                  <%= render 'crud_menus', post: @post %>
                <% else %>
                  <%= render 'like_button', post: @post  %>
                <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>