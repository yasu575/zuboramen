<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <%= image_tag post.image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to post.title, post_path(post), class: "link-dark" %>
        </h4>
        <ul class="list-inline">
          <li class="card-text">
            <i class="fa-solid fa-user"></i>
            <%= post.user.name %>
          </li>
          <li class="card-text">
            <i class="fa-regular fa-calendar-days"></i>
            <%= l post.created_at, format: :long %>
          </li>
          <%= render 'crud_menus', post: post if current_user.own?(post) %>
        </ul>
      </div>
    </div>
  </div>
</div>