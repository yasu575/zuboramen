<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <%= image_tag post.image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to post.title, post_path(post), class: "link-dark" %>
        </h4>
        <ul class="list-inline">
          <li class="card-text">
            <i class="fa-solid fa-tags"></i>
            <% post.toppings.each do |topping| %>
              <%= link_to topping.name, topping_posts_path(topping_id: topping.id), class: "badge rounded-pill bg-warning text-dark" %>
            <% end %>
          </li>
          <li class="card-text">
            <i class="fa-solid fa-comments"></i>
            <%= post.content %>
          </li>
          <li class="card-text">
            <i class="fa-solid fa-user"></i>
            <%= post.user.name %>
          </li>
          <li class="card-text">
            <i class="fa-regular fa-calendar-days"></i>
            <%= l post.created_at, format: :long %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>