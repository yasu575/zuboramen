<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <%= render 'search_form', url: posts_path %>
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>

