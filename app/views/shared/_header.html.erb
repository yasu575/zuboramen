<header>
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag 'logo.png' %>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="offcanvas offcanvas-end text-bg-light" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasLightNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">
          <%= image_tag current_user.avatar.url, size: '50x50', class: 'rounded-circle mr15' %>
          <%= current_user.name %>
          </h5>
          <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
            <li class="nav-item">
              <%= link_to t('posts.index.title'), posts_path, class: 'nav-link' %>
              <%= link_to t('posts.new.title'), new_post_path, class: 'nav-link' %>
              <%= link_to t('profiles.show.title'), profile_path, class: 'nav-link' %>
              <%= link_to t('defaults.logout'), logout_path, class: 'nav-link', method: :delete %>
            </li>
          </ul>
        </div>
      </div> 
    </div>
  </nav>
</header>